@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: url('/images/library-banner.jpg') no-repeat center center fixed;
        background-size: cover;
        color: white;
    }

    .main-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 40px 20px;
    }

    .auth-content {
        background-color: rgba(0, 0, 0, 0.85);
        padding: 40px;
        border-radius: 12px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 0 20px rgba(0,0,0,0.8);
    }

    .auth-title {
        color: white;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
    }

    .form-input {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #444;
        color: white;
        padding: 12px 15px;
        width: 100%;
        border-radius: 6px;
        margin-bottom: 15px;
        font-size: 1rem;
    }

    .auth-button {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 12px;
        width: 100%;
        border-radius: 6px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 10px;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.9rem;
    }

    .auth-links {
        text-align: center;
        margin-top: 20px;
    }

        .auth-links a {
            color: #17a2b8;
            text-decoration: none;
        }
</style>

<div class="main-wrapper">
    <div class="auth-content">
        <h1 class="auth-title">@ViewData["Title"]</h1>
        <h4>Enter your email.</h4>
        <hr />

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-input" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="auth-button">Submit</button>
        </form>

        <div class="auth-links">
            <p>
                <a asp-page="./Login">Back to Login</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}