@model BookBox.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        background: url('/images/library-banner.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .main-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 40px 20px;
    }

    .content {
        background-color: rgba(0, 0, 0, 0.75);
        padding: 30px 40px;
        border-radius: 12px;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 0 15px rgba(0,0,0,0.8);
    }

    h1, h3 {
        text-align: center;
        margin-bottom: 20px;
    }

    dl.row {
        margin-top: 20px;
    }

    dt {
        font-weight: 600;
        color: #ccc;
    }

    dd {
        margin-bottom: 15px;
    }

    .btn-danger,
    .btn-secondary {
        font-size: 1.1rem;
        padding: 10px 20px;
        border-radius: 8px;
        margin-right: 10px;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }

    .form-actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }
</style>

<div class="main-wrapper">
    <div class="content">
        <h1>Delete Book</h1>
        <h3>Are you sure you want to delete this book?</h3>

        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@Model.Year</dd>
        </dl>

        <form asp-action="Delete" method="post" class="form-actions">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
