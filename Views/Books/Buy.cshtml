@model BookBox.Models.Book

@{
    ViewData["Title"] = "Purchase Book";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        background: url('/images/library-banner.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .main-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 40px 20px;
    }

    .content {
        background-color: rgba(0, 0, 0, 0.75);
        padding: 30px 40px;
        border-radius: 12px;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 0 15px rgba(0,0,0,0.8);
    }

    h1, h4 {
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: #eee;
    }

    input.form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #ccc;
        color: white;
    }

        input.form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }

    .text-danger {
        color: #ff6b6b;
    }

    .btn-primary,
    .btn-secondary {
        font-size: 1.1rem;
        padding: 10px 20px;
        border-radius: 8px;
        margin-right: 10px;
        border: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }

    .form-actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

    .book-info {
        margin-bottom: 30px;
    }

        .book-info dt {
            font-weight: 600;
            color: #ccc;
        }

        .book-info dd {
            margin-bottom: 15px;
        }
</style>

<div class="main-wrapper">
    <div class="content">
        <h1>Purchase "@Model.Title"</h1>
        <h4>by @Model.Author</h4>

        <dl class="row book-info">
            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Year</dt>
            <dd class="col-sm-8">@Model.PublicationDate</dd>
        </dl>

        <form asp-action="ConfirmPurchase" asp-route-id="@Model.Id" method="post">
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity</label>
                <input type="number" id="quantity" name="quantity" min="1" value="1" class="form-control">
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Confirm Purchase</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>